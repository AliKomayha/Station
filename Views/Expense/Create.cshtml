@model Station.Models.Expense

<h2>Create Expense</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="UserId">User</label>

        <input asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></input>
         @* to be changed after creating login feature*@
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a href="/Expense/Index" class="btn btn-secondary">Cancel</a>
</form>
