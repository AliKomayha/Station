@model IEnumerable<Station.Models.CustomerVoucher>

@{
    ViewData["Title"] = "Customer Voucher";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-ticket-alt me-2"></i>Customer Vouchers
    </h2>
    <a href="/CustomerVouchers/Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Create Customer Voucher
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customervoucher in Model)
        {
            <tr>
                <td>@customervoucher.Name</td>
                <td>@customervoucher.Quantity</td>
                    <td><strong class="text-success">$@customervoucher.Price.ToString("F2")</strong></td>
                <td>@customervoucher.Date.ToString("MMM dd-yyyy")</td>
                <td>@customervoucher.User?.Name</td>
                <td>
                    <a href="/CustomerVouchers/Details/@customervoucher.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/CustomerVouchers/Edit/@customervoucher.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/CustomerVouchers/Delete/@customervoucher.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>