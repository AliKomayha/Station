@model Station.Models.CustomerVoucher

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-ticket-alt me-2"></i>Edit Customer Voucher
                </h4>
            </div>
            <div class="card-body">

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-2">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Price"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                               <input asp-for="Price" class="form-control" type="number" step="0.01" />
                         </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" class="form-control" type="date" />
                    </div>
    
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/CustomerVouchers/Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>