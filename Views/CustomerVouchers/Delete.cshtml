@model Station.Models.CustomerVoucher

<h2>Delete Customer Voucher</h2>

<div>
    <p>Are you sure you want to delete this Customer Voucher?</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
    <p><strong>User:</strong> @Model.User?.Name</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/CustomerVouchers/Index" class="btn btn-secondary">Cancel</a>
</form>
