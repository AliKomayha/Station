@model IEnumerable<Station.Models.Debt>

@{
    ViewData["Title"] = "Debts";
}

<h2>Debts</h2>

<p>
    <a href="/Debts/Create" class="btn btn-success">Create New Debt</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var debt in Model)
        {
            <tr>
                <td>@debt.Name</td>
                <td>@debt.Price</td>
                <td>@debt.Date.ToString("yyyy-MM-dd")</td>
                <td>@debt.User?.Name</td>
                <td>
                    <a href="/Debts/Details/@debt.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/Debts/Edit/@debt.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Debts/Delete/@debt.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
