@model IEnumerable<Station.Models.LitersPlus>

@{
    ViewData["Title"] = "Liters Plus";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-gas-pump me-2"></i>Liters Plus
    </h2>
    <a href="/LitersPlus/Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Create Liters Plus
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var litersplus in Model)
        {
            <tr>
                <td>@litersplus.Type</td>
                <td>@litersplus.Quantity</td>
                    <td><strong class="text-success">$@litersplus.Price.ToString("F2")</strong></td>
                    <td>@litersplus.Date.ToString("MMM dd-yyyy")</td>
                <td>@litersplus.User?.Name</td>
                <td>
                    <a href="/LitersPlus/Details/@litersplus.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/LitersPlus/Edit/@litersplus.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/LitersPlus/Delete/@litersplus.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>