@model Station.Models.CarWash

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Are you sure you want to delete this car wash?
                </h4>
            </div>
            <div class="card-body">

            <div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong class="text-muted">Type:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-6">@Model.Type</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong class="text-muted">Price:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-6 text-success fw-bold">$@Model.Price.ToString("F2")</span>
                        </div>
                    </div>
                
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong class="text-muted">Date:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-6">
                                <i class="fas fa-calendar-alt me-2 text-muted"></i>
                                @Model.Date.ToString("MMMM dd, yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong class="text-muted">User:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-6">
                                <i class="fas fa-user me-2 text-muted"></i>
                                @(Model.User?.Name ?? "N/A")
                            </span>
                        </div>
                    </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="/CarWashes/Index" class="btn btn-secondary">Cancel</a>
            </form>
            </div>
        </div>
    </div>
</div>