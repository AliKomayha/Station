@model Station.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-receipt me-2"></i>Expense Details
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong class="text-muted">Type:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span class="badge bg-primary fs-6">@Model.Type</span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong class="text-muted">Price:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span class="fs-4 text-success fw-bold">$@Model.Price.ToString("F2")</span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong class="text-muted">Date:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span class="fs-5">
                            <i class="fas fa-calendar-alt me-2 text-muted"></i>
                            @Model.Date.ToString("MMMM dd, yyyy")
                        </span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong class="text-muted">User:</strong>
                    </div>
                    <div class="col-sm-8">
                        <span class="fs-5">
                            <i class="fas fa-user me-2 text-muted"></i>
                            @(Model.User?.Name ?? "N/A")
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/Expenses/Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    <a href="/Expenses/Edit/@Model.Id" class="btn btn-primary me-md-2">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a href="/Expenses/Delete/@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
