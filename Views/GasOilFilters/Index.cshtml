@model IEnumerable<Station.Models.GasOilFilter>

@{
    ViewData["Title"] = "Gas Oil Filters";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-oil-can me-2"></i>Gas Oil Filters
    </h2>
    <a href="/GasOilFilters/Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Create Gas Oil Filter
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gasoilfilters in Model)
        {
            <tr>
                <td>@gasoilfilters.Type</td>
                <td>@gasoilfilters.Quantity</td>
                    <td><strong class="text-success">$@gasoilfilters.Price.ToString("F2")</strong></td>
                <td>@gasoilfilters.Date.ToString("MMM dd-yyyy")</td>
                <td>@gasoilfilters.User?.Name</td>
                <td>
                    <a href="/GasOilFilters/Details/@gasoilfilters.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/GasOilFilters/Edit/@gasoilfilters.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/GasOilFilters/Delete/@gasoilfilters.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
