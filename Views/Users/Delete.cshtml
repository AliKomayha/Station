@model Station.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Are you sure you want to deactivate this User?
                </h4>
            </div>
            <div class="card-body">

            <div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong class="text-muted">Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-6">@Model.Name</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong class="text-muted">Role:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-6">@Model.Role</span>
                        </div>
                    </div>
            </div>

            <form asp-action="Deactivate" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Deactivate</button>
                <a href="/Users/Index" class="btn btn-secondary">Cancel</a>
            </form>
            </div>
        </div>
    </div>
</div>