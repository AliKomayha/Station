@model IEnumerable<Station.Models.DebtCollection>

@{
    ViewData["Title"] = "Debt Collections";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-credit-card me-2"></i>Debts Collection
    </h2>
    <a href="/DebtCollections/Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Create New Debt Collection
    </a>
</div>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var debtcollection in Model)
        {
            <tr>
                <td>@debtcollection.Name</td>
               
                <td><strong class="text-success">$@debtcollection.Price.ToString("F2")</strong></td>
                    <td>@debtcollection.Date.ToString("MMM dd, yyyy")</td>
                <td>@debtcollection.User?.Name</td>
                <td>
                    <a href="/DebtCollections/Details/@debtcollection.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/DebtCollections/Edit/@debtcollection.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/DebtCollections/Delete/@debtcollection.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>