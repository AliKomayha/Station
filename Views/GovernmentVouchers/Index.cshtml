@model IEnumerable<Station.Models.GovernmentVoucher>

@{
    ViewData["Title"] = "Government Voucher";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-ticket-alt me-2"></i>Government Vouchers
    </h2>
    <a href="/GovernmentVouchers/Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Create Government Voucher
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var governmentvoucher in Model)
        {
            <tr>
                <td>@governmentvoucher.Name</td>
                <td>@governmentvoucher.Quantity</td>
                    <td><strong class="text-success">$@governmentvoucher.Price.ToString("F2")</strong></td>
                    <td>@governmentvoucher.Date.ToString("MMM dd-yyyy")</td>
                <td>@governmentvoucher.User?.Name</td>
                <td>
                    <a href="/GovernmentVouchers/Details/@governmentvoucher.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/GovernmentVouchers/Edit/@governmentvoucher.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/GovernmentVouchers/Delete/@governmentvoucher.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>